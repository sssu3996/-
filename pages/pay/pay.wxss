/* pages/pay/pay.wxss */
.userInfo {
  padding: 30rpx;
  font-size: 12px;
  line-height: 70rpx;
  border-bottom: 1px solid #ccc;
}

.carsList {
  border-top: 20rpx solid rgb(245, 245, 244);
  border-bottom: 20rpx solid rgb(245, 245, 244);
}

.shopName {
  font-size: 13px;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}

.list {
  padding: 10rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.list image {
  width: 520rpx;
  height: 220rpx;
  margin-right: 20rpx;
}

.content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
}

.content_title {
  font-size: 12px;
}

.content-price_num {
  display: flex;
  justify-content: space-between;
}

.price {
  color: rgb(244, 43, 71);
}

.price::before {
  content: "￥";
  font-size: 80%;
}

.goodsNum {
  width: 180rpx;
  display: flex;
  color: #ccc;
  justify-content: flex-end;
}

.null {
  height: 150rpx;
}

.calc {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: flex-end;
  border-top: 20rpx solid rgb(245, 245, 244);
  background-color: #fff;
}

.all {
  display: flex;
  flex-direction: column;
  width: 260rpx;
  font-size: 14px;
}

.all_top {
  display: flex;
}

.all_price {
  color: rgb(244, 43, 71);
}

.all_price::before {
  content: "￥";
  font-size: 80%;
}

.all_bottom {
  font-size: 12px;
  color: #ccc;
}


.pay {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 260rpx;
  background-color: rgb(244, 43, 71);
  font-size: 13px;
  color: #fff;
  height: 100rpx;

}
