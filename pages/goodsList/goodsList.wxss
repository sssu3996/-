/* pages/goodsList/goodsList.wxss */

.title {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
  font-size: 14px;
}

.active {
  color: rgb(244, 43, 71);
  font-weight: bold;
}

.goodList {
  width: 750rpx;
  height: 250rpx;
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}

.img {
  width: 250rpx;
  margin-right: 20rpx;
}

.img image {
  width: 100%;
  height: 100%;
}

.content {
  width: 445rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goodtitle {
  width: 100%;
  height: 86rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 13px;
}

.price {
  font-size: 16px;
  color: rgb(244, 43, 71);
}

.price::before {
  content: "ï¿¥";
  font-size: 80%;
}
